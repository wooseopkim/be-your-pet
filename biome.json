{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "useEditorconfig": true
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "include": ["packages/crawler/**"],
      "linter": {
        "rules": {
          "correctness": {
            "useImportExtensions": "error"
          }
        }
      }
    }
  ]
}
